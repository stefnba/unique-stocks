{
    "name": "unique-stocks-logit-backend",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon src/server.ts",
        "debug": "nodemon --exec \"node --inspect-brk=0.0.0.0:9229 --require ts-node/register src/server.ts\"",
        "start": "ts-node dist/server.js",
        "copy": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./dist",
        "clean": "rm -rf dist",
        "build": "npm run clean && tsc -p . && npm run copy",
        "migrate": "postgresql-migrate -c /src/_db/config.json",
        "docker:build": "scripts/docker/build.sh",
        "docker:prod": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.prod.yml -f docker/docker-compose.deploy.yml --project-directory . up -d --build --remove-orphans",
        "docker:test": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.prod.yml -f docker/docker-compose.test.yml --project-directory . up -d --build --force-recreate",
        "docker:dev": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.dev.yml --project-directory . up -d --build --force-recreate ",
        "deploy": "scripts/deploy/deploy.sh"
    },
    "keywords": [
        "nodejs",
        "expressjs",
        "backend",
        "starter"
    ],
    "author": "Stefan Bauer",
    "license": "MIT",
    "dependencies": {
        "dotenv": "^16.0.3",
        "express": "^4.18.1",
        "mongodb": "^5.5.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/express": "^4.17.14",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.8.2",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "chai": "^4.3.7",
        "copyfiles": "^2.4.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "mocha": "^10.1.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "supertest": "^6.3.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    }
}
