{
    "name": "unique-stocks-backend",
    "author": "Stefan Bauer",
    "license": "MIT",
    "version": "0.0.1",
    "description": "",
    "type": "module",
    "scripts": {
        "dev": "nodemon",
        "debug": "nodemon --exec \"node --inspect-brk=0.0.0.0:9229 --require ts-node/register src/server.ts\"",
        "start": "node dist/server.js",
        "copy": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" ./dist",
        "clean": "rm -rf dist",
        "build": "npm run clean && tsc -p . && npm run copy && tsc-alias",
        "migrate": "postgresql-migrate -c /src/_db/config.json",
        "docker:build": "scripts/docker/build.sh",
        "docker:prod": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.prod.yml -f docker/docker-compose.deploy.yml --project-directory . up -d --build --remove-orphans",
        "docker:test": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.prod.yml -f docker/docker-compose.test.yml --project-directory . up -d --build --force-recreate",
        "docker:dev": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.dev.yml --project-directory . up -d --build --force-recreate "
    },
    "keywords": [],
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "crypto-random-string": "^5.0.0",
        "dotenv": "^16.1.4",
        "express": "^4.18.2",
        "express-promise-router": "^4.1.1",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "pg-promise": "^11.5.0",
        "query-string": "^8.1.0",
        "ua-parser-js": "^1.0.35"
    },
    "devDependencies": {
        "@types/chai": "^4.3.5",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/mocha": "^10.0.1",
        "@types/morgan": "^1.9.4",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.2.5",
        "@types/ua-parser-js": "^0.7.36",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "copyfiles": "^2.4.1",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "tsc-alias": "^1.8.6",
        "tsx": "^3.12.7",
        "typescript": "^5.1.3"
    }
}
