{
    "compilerOptions": {
        "allowJs": true,
        "target": "es2016",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": false,
        "typeRoots": ["src/@types", "./node_module/@types", "src/*/@types"]
    },
    "exclude": ["testing", "dist"],
    "include": ["src"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
